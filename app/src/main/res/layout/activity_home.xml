<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:weightSum="100"
    tools:context=".HomeActivity"
    xmlns:tools="http://schemas.android.com/tools">

    <!-- card total pembayaran-->


    <!-- card dana-->


    <ImageView
        android:id="@+id/logo"
        android:layout_width="300dp"
        android:layout_height="80dp"
        android:layout_marginStart="90dp"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="40dp"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="50dp"
        android:padding="5dp"
        android:src="@drawable/search" />

    <ImageView
        android:id="@+id/poto"
        android:layout_width="70dp"
        android:layout_height="50dp"
        android:layout_marginStart="5dp"
        android:layout_marginTop="-115dp"
        android:onClick="profile"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="50dp"
        android:padding="5dp"
        android:src="@drawable/group_7109" />


    <ImageView
        android:id="@+id/cari"
        android:layout_width="200dp"
        android:layout_height="70dp"
        android:layout_marginLeft="-90dp"
        android:layout_marginStart="15dp"
        android:layout_marginTop="-30dp"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="50dp"
        android:padding="5dp"
        android:src="@drawable/group_7110" />
    <ImageView
        android:id="@+id/logo1"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginLeft="-80dp"
        android:layout_marginStart="300dp"
        android:layout_marginTop="-150dp"
        android:onClick="about"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="50dp"
        android:padding="5dp"
        android:src="@drawable/ic_logo" />

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:layout_marginTop="-50dp"
        app:cardBackgroundColor="@color/white"
        app:cardCornerRadius="8dp"
        app:cardElevation="8dp"
        app:cardMaxElevation="10dp"
        app:cardPreventCornerOverlap="true"
        app:cardUseCompatPadding="true">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <!-- Text View to display Course Name -->
            <ImageView
                android:id="@+id/produk1"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_marginStart="10dp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="10dp"
                android:layout_marginBottom="10dp"
                android:padding="5dp"
                android:src="@drawable/kostraharja" />

            <TextView
                android:id="@+id/namaproduk1"
                android:layout_width="100dp"
                android:onClick="raharja"
                android:layout_height="100dp"
                android:layout_alignParentBottom="true"
                android:layout_marginStart="110dp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="100dp"
                android:layout_marginBottom="5dp"
                android:fontFamily="@font/medium"
                android:text="Kost Raharja"
                android:textColor="@color/biru"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/hargaproduk1"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_alignParentBottom="true"
                android:layout_marginStart="110dp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="10dp"
                android:layout_marginBottom="5dp"
                android:fontFamily="@font/medium"
                android:text="Rp 800.000 / Bulan"
                android:textColor="@android:color/holo_red_light"
                android:textSize="15sp"
                />

            <TextView
                android:id="@+id/gender1"
                android:layout_width="99dp"
                android:fontFamily="@font/medium"
                android:layout_height="wrap_content"
                android:layout_marginStart="330dp"
                android:layout_marginTop="30dp"
                android:layout_marginEnd="100dp"
                android:layout_marginBottom="-15dp"
                android:text="Putra"
                android:textColor="@color/black"
                android:textSize="15sp" />


        </RelativeLayout>

    </androidx.cardview.widget.CardView>


    <!-- card bsi -->

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="120dp"
        app:cardBackgroundColor="@color/white"
        app:cardCornerRadius="8dp"

        app:cardElevation="8dp"
        app:cardMaxElevation="10dp"
        app:cardPreventCornerOverlap="true"
        app:cardUseCompatPadding="true">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >


            <!-- Text View to display Course Name -->
            <ImageView
                android:id="@+id/produk2"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_marginStart="10dp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="10dp"
                android:layout_marginBottom="10dp"
                android:padding="5dp"
                android:src="@drawable/kostvishe" />

            <TextView
                android:id="@+id/namaproduk2"
                android:layout_width="match_parent"
                android:layout_height="450dp"
                android:layout_alignParentBottom="true"
                android:layout_marginStart="110dp"
                android:layout_marginTop="10dp"
                android:fontFamily="@font/medium"
                android:layout_marginEnd="100dp"
                android:layout_marginBottom="5dp"
                android:onClick="vishe"
                android:text="Kost Vishe"
                android:textColor="@color/biru"
                android:textSize="15sp"
                />

            <TextView
                android:id="@+id/hargaproduk2"
                android:layout_width="147dp"
                android:layout_height="39dp"
                android:layout_alignParentBottom="true"
                android:layout_marginStart="110dp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="10dp"
                android:fontFamily="@font/medium"
                android:layout_marginBottom="5dp"
                android:text="Rp 500.000 / Bulan"
                android:textColor="@android:color/holo_red_light"
                android:textSize="15sp" />

        </RelativeLayout>

        <TextView
            android:id="@+id/gender2"
            android:layout_width="99dp"
            android:fontFamily="@font/medium"
            android:layout_height="wrap_content"
            android:layout_marginStart="330dp"
            android:layout_marginTop="30dp"
            android:layout_marginEnd="100dp"
            android:layout_marginBottom="-15dp"
            android:text="Putra"
            android:textColor="@color/black"
            android:textSize="15sp" />

    </androidx.cardview.widget.CardView>

    <!-- card bni-->

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="120dp"
        app:cardBackgroundColor="@color/white"
        app:cardCornerRadius="8dp"
        app:cardElevation="8dp"
        app:cardMaxElevation="10dp"
        app:cardPreventCornerOverlap="true"
        app:cardUseCompatPadding="true">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <!-- Text View to display Course Name -->
            <ImageView
                android:id="@+id/prduk3"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_marginStart="10dp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="10dp"
                android:layout_marginBottom="10dp"
                android:padding="5dp"
                android:src="@drawable/kostmawar"/>

            <TextView
                android:id="@+id/namaproduk3"
                android:layout_width="match_parent"
                android:layout_height="453dp"
                android:layout_alignParentBottom="true"
                android:layout_marginStart="110dp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="100dp"
                android:layout_marginBottom="5dp"
                android:fontFamily="@font/medium"
                android:onClick="mawar"
                android:text="Kost Mawar"
                android:textColor="@color/biru"
                android:textSize="15sp"/>

            <TextView
                android:id="@+id/hargaproduk3"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_alignParentBottom="true"
                android:layout_marginStart="110dp"
                android:layout_marginTop="10dp"
                android:fontFamily="@font/medium"
                android:layout_marginEnd="10dp"
                android:layout_marginBottom="5dp"
                android:text="Rp 550.000 / Bulan"
                android:textColor="@android:color/holo_red_light"
                android:textSize="15sp"
                />

            <TextView
                android:id="@+id/gender3"
                android:layout_width="99dp"
                android:fontFamily="@font/medium"
                android:layout_height="wrap_content"
                android:layout_marginStart="330dp"
                android:layout_marginTop="30dp"
                android:layout_marginEnd="100dp"
                android:layout_marginBottom="-15dp"
                android:text="Putri"
                android:textColor="@color/black"
                android:textSize="15sp" />
        </RelativeLayout>

    </androidx.cardview.widget.CardView>
    <!-- card bibit-->

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="120dp"
        app:cardBackgroundColor="@color/white"
        android:layout_marginBottom="-14dp"
        app:cardCornerRadius="8dp"
        app:cardElevation="8dp"
        app:cardMaxElevation="10dp"
        app:cardPreventCornerOverlap="true"
        app:cardUseCompatPadding="true">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <!-- Text View to display Course Name -->
            <ImageView
                android:id="@+id/produk4"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_margin="10dp"

                android:contentDescription="@string/app_name"
                android:padding="5dp"
                android:src="@drawable/kostaisyah" />

            <TextView
                android:id="@+id/namaproduk4"
                android:layout_width="match_parent"
                android:layout_height="453dp"
                android:layout_alignParentBottom="true"
                android:layout_marginStart="110dp"
                android:layout_marginTop="10dp"

                android:layout_marginEnd="100dp"
                android:onClick="aisyah"
                android:fontFamily="@font/medium"
                android:layout_marginBottom="5dp"
                android:text="Kost Aisyah"
                android:textColor="@color/biru"
                android:textSize="15sp"/>

            <TextView
                android:id="@+id/hargaproduk4"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_alignParentBottom="true"
                android:layout_marginStart="110dp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="10dp"
                android:layout_marginBottom="5dp"
                android:fontFamily="@font/medium"
                android:text="Rp 1.000.000 / Bulan"
                android:textColor="@android:color/holo_red_light"
                android:textSize="15sp"
                />

            <TextView
                android:id="@+id/gender4"
                android:layout_width="99dp"

                android:layout_height="wrap_content"
                android:layout_marginStart="330dp"
                android:layout_marginTop="30dp"
                android:layout_marginEnd="100dp"
                android:layout_marginBottom="-15dp"
                android:text="Putri"
                android:fontFamily="@font/medium"
                android:textColor="@color/black"
                android:textSize="15sp" />
            />
        </RelativeLayout>
    </androidx.cardview.widget.CardView>

</LinearLayout>