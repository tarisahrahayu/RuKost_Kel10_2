<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:weightSum="100">

    <TextView
        android:layout_marginTop="16dp"

        android:text="Pembayaran"
        android:textSize="16dp"
        android:textColor="@color/black"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center" />

    <!-- card total pembayaran-->


    <androidx.cardview.widget.CardView
        android:layout_width="165dp"
        android:layout_height="wrap_content"
        android:layout_margin="6dp"
        app:cardBackgroundColor="@color/white"
        app:cardCornerRadius="8dp"
        app:cardElevation="8dp"
        app:cardMaxElevation="10dp"
        app:cardPreventCornerOverlap="true"
        app:cardUseCompatPadding="true" >

    </androidx.cardview.widget.CardView>

    <ImageView
        android:id="@+id/dana2"
        android:layout_width="660dp"
        android:layout_height="100dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="10dp"
        android:padding="5dp"
        android:src="@drawable/rukostt" />

    <!-- card dana-->

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="left"
        android:layout_marginTop="1dp"
        android:text="Lihat keTempat Kita !"
        android:textColor="@color/black"
        android:textSize="26dp" />

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="120dp"

        app:cardBackgroundColor="@color/white"
        app:cardCornerRadius="8dp"
        app:cardElevation="8dp"
        app:cardMaxElevation="10dp"
        app:cardPreventCornerOverlap="true"
        app:cardUseCompatPadding="true">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <!-- Text View to display Course Name -->
            <ImageView
                android:id="@+id/dana"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_marginStart="10dp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="10dp"
                android:layout_marginBottom="10dp"
                android:padding="5dp"
                android:src="@drawable/kostraharja" />

            <TextView
                android:id="@+id/home"
                android:layout_width="match_parent"

                android:layout_height="100dp"
                android:layout_alignParentBottom="true"
                android:layout_marginStart="110dp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="100dp"
                android:layout_marginBottom="5dp"
                android:text="Kost Raharja"
                android:textColor="@color/dongker"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/namaproduk1"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_alignParentBottom="true"
                android:layout_marginStart="110dp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="10dp"
                android:layout_marginBottom="5dp"
                android:text="Rp 800.000 / Bulan"
                android:textColor="@android:color/holo_red_light"
                android:textSize="15sp"
                />


        </RelativeLayout>
    </androidx.cardview.widget.CardView>


    <!-- card bsi -->

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="120dp"
        app:cardBackgroundColor="@color/white"
        app:cardCornerRadius="8dp"

        app:cardElevation="8dp"
        app:cardMaxElevation="10dp"
        app:cardPreventCornerOverlap="true"
        app:cardUseCompatPadding="true">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >


            <!-- Text View to display Course Name -->
            <ImageView
                android:id="@+id/bsi"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_marginStart="10dp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="10dp"
                android:layout_marginBottom="10dp"
                android:padding="5dp"
                android:src="@drawable/kostvishe" />

            <TextView
                android:id="@+id/namaproduk2"
                android:layout_width="match_parent"
                android:layout_height="450dp"
                android:layout_alignParentBottom="true"
                android:layout_marginStart="110dp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="100dp"
                android:layout_marginBottom="5dp"
                android:text="Kost Vishe"
                android:textColor="@color/dongker"
                android:textSize="15sp"
                />

            <TextView
                android:id="@+id/namabsi"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_alignParentBottom="true"
                android:layout_marginStart="110dp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="10dp"
                android:layout_marginBottom="5dp"
                android:text="Rp 500.000 / Bulan"
                android:textColor="@android:color/holo_red_light"
                android:textSize="15sp"
                />
        </RelativeLayout>
    </androidx.cardview.widget.CardView>

    <!-- card bni-->

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="120dp"
        app:cardBackgroundColor="@color/white"
        app:cardCornerRadius="8dp"
        app:cardElevation="8dp"
        app:cardMaxElevation="10dp"
        app:cardPreventCornerOverlap="true"
        app:cardUseCompatPadding="true">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <!-- Text View to display Course Name -->
            <ImageView
                android:id="@+id/bni"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_marginStart="10dp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="10dp"
                android:layout_marginBottom="10dp"
                android:padding="5dp"
                android:src="@drawable/kostmawar"/>

            <TextView
                android:id="@+id/namaproduk3"
                android:layout_width="match_parent"
                android:layout_height="453dp"
                android:layout_alignParentBottom="true"
                android:layout_marginStart="110dp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="100dp"
                android:layout_marginBottom="5dp"
                android:text="Kost Mawar"
                android:textColor="@color/dongker"
                android:textSize="15sp">

            <TextView
                android:id="@+id/namabsi"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_alignParentBottom="true"
                android:layout_marginStart="110dp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="10dp"
                android:layout_marginBottom="5dp"
                android:text="Rp 550.000 / Bulan"
                android:textColor="@android:color/holo_red_light"
                android:textSize="15sp"
                />


        </RelativeLayout>

    </androidx.cardview.widget.CardView>
    <!-- card bibit-->

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="120dp"
        app:cardBackgroundColor="@color/white"
        android:layout_marginBottom="1dp"
        app:cardCornerRadius="8dp"
        app:cardElevation="8dp"
        app:cardMaxElevation="10dp"
        app:cardPreventCornerOverlap="true"
        app:cardUseCompatPadding="true">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <!-- Text View to display Course Name -->
            <ImageView
                android:id="@+id/bibit"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_margin="10dp"
                android:contentDescription="@string/app_name"
                android:padding="5dp"
                android:src="@drawable/kostaisyah" />

            <TextView
                android:id="@+id/namaproduk4"
                android:layout_width="match_parent"
                android:layout_height="453dp"
                android:layout_alignParentBottom="true"
                android:layout_marginStart="110dp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="100dp"
                android:textStyle="bold"
                android:layout_marginBottom="5dp"
                android:text="Kost Aisyah"
                android:textColor="@color/dongker"
                android:textSize="15sp"></TextView>

            <TextView
                android:id="@+id/namabsi"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_alignParentBottom="true"
                android:layout_marginStart="110dp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="10dp"
                android:layout_marginBottom="5dp"
                android:text="Rp 1.000.000 / Bulan"
                android:textColor="@android:color/holo_red_light"
                android:textSize="15sp"
                />
            />
        </RelativeLayout>
    </androidx.cardview.widget.CardView>

</LinearLayout>