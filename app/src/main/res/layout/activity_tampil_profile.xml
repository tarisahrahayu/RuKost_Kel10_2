<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:background="@color/biru">

    <ImageView
        android:id="@+id/bg_hal_satu"
        android:layout_width="200dp"
        android:layout_height="150dp"
        android:layout_marginTop="16dp"
        android:src="@drawable/ic_logo"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.496"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"></ImageView>

    <Button
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:layout_marginTop="28dp"
        android:background="@drawable/arrow_left"
        app:layout_constraintEnd_toEndOf="parent"
        android:onClick="backHome"
        app:layout_constraintHorizontal_bias="0.042"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"></Button>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="550dp"
        android:background="@drawable/boxrounded"
        app:layout_constraintBottom_toBottomOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <EditText
                android:id="@+id/et_username"
                android:layout_width="330dp"
                android:layout_height="60dp"
                android:layout_marginTop="40dp"
                android:layout_gravity="center"
                android:text="Kaka Gata"
                android:inputType="text" />


            <EditText
                android:id="@+id/et_pass"
                android:layout_width="330dp"
                android:layout_height="62dp"
                android:layout_gravity="center"
                android:text="kaka"
                android:inputType="text" />

            <EditText
                android:id="@+id/et_ttl"
                android:layout_width="330dp"
                android:layout_height="60dp"
                android:layout_gravity="center"
                android:text="Pekanbaru, 17 Maret 2002"
                android:inputType="text" />

            <EditText
                android:id="@+id/et_kota"
                android:layout_width="330dp"
                android:layout_height="62dp"
                android:layout_gravity="center"
                android:text="Pekanbaru"
                android:inputType="text" />

            <EditText
                android:id="@+id/et_NoHp"
                android:layout_width="330dp"
                android:layout_height="62dp"
                android:layout_gravity="center"
                android:text="085363748306"
                android:inputType="text" />

            <EditText
                android:id="@+id/et_JK"
                android:layout_width="330dp"
                android:layout_height="62dp"
                android:layout_gravity="center"
                android:text="Laki-Laki"
                android:inputType="text" />

            <EditText
                android:id="@+id/et_Status"
                android:layout_width="330dp"
                android:layout_height="62dp"
                android:layout_gravity="center"
                android:text="Mahasiswa"
                android:inputType="text" />



            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/app_name">


            </com.google.android.material.textfield.TextInputLayout>

        </LinearLayout>
    </FrameLayout>


</androidx.constraintlayout.widget.ConstraintLayout>